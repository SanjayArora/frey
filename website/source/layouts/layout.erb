<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,800,700,600,300italic,400italic,600italic,700italic,800italic' rel='stylesheet' type='text/css'>
    <script src="https://use.typekit.net/ode8hfn.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial 'partials/header' %>
    <%= yield %>
  </body>
</html>
