{
  "name": "frey",
  "version": "0.2.2",
  "description": "Automated infrastructure CLI",
  "scripts": {
    "babel": "babel src --out-dir lib --source-maps",
    "build": "npm run test && npm run babel && npm run libversion",
    "encrypt": "source env.sh && bash scripts/encrypt.sh",
    "fix": "standard . --format",
    "libversion": "node ./lib/cli.js --version",
    "lint": "standard .",
    "mocha": "mocha --compilers js:babel-register --reporter spec test/ --grep \"${GREP}\"",
    "prepublish": "npm run build",
    "release:major": "npm version major -m \"Release %s\" && git push && npm publish",
    "release:minor": "npm version minor -m \"Release %s\" && git push && npm publish",
    "release:patch": "npm version patch -m \"Release %s\" && git push && npm publish",
    "save:acceptance:fixtures": "source env.sh && env SAVE_FIXTURES=true ./test/acceptance.sh ${SCENARIO}",
    "test:acceptance": "./test/acceptance.sh ${SCENARIO}",
    "test:coverage": "mocha --compilers js:babel-register --recursive test && istanbul report text-summary lcov && (cat coverage/lcov.info | coveralls || true)",
    "test:full": "npm run test:coverage && npm run test:acceptance",
    "test": "npm run lint && npm run mocha"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "dist/**",
      "lib/**"
    ]
  },
  "files": [
    "lib"
  ],
  "main": "lib/Frey",
  "bin": {
    "frey": "lib/cli.js"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kvz/frey.git"
  },
  "dependencies": {
    "async": "^1.5.0",
    "chalk": "^1.1.1",
    "depurar": "^0.2.0",
    "flat": "^1.6.0",
    "glob": "^6.0.0",
    "inflection": "^1.7.2",
    "ini": "^1.3.4",
    "js-yaml": "^3.4.3",
    "liftoff": "2.2.0",
    "lodash": "^3.10.1",
    "mkdirp": "^0.5.1",
    "mustache": "^2.2.0",
    "os-homedir": "^1.0.1",
    "rc": "^1.1.5",
    "semver": "^5.0.3",
    "standard": "6.0.1",
    "toml": "^2.3.0",
    "update-notifier": "^0.5.0",
    "yargs": "^3.29.0",
    "yesno": "0.0.1"
  },
  "devDependencies": {
    "babel-eslint": "4.1.8",
    "standard": "5.4.1",
    "babel-cli": "6.4.5",
    "babel-preset-es2015": "6.3.13",
    "babel-register": "6.4.3",
    "chai": "^3.4.1",
    "coveralls": "^2.11.4",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3",
    "should": "^7.1.1"
  },
  "keywords": [
    "terraform",
    "ansible",
    "infra",
    "automation"
  ],
  "author": "Kevin van Zonneveld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kvz/frey/issues"
  },
  "homepage": "https://github.com/kvz/frey#readme"
}
